<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="security.authentication.listener.basic.class">WTW\UserBundle\EventListener\BasicAuthenticationListener</parameter>
        <parameter key="user_manager.class">WTW\UserBundle\Repository\UserRepository</parameter>
        <parameter key="wtw_user.entity.user.class">WTW\UserBundle\Entity\User</parameter>
    </parameters>

    <services>
        <service id="user_manager" class="%user_manager.class%">
            <factory service="doctrine.orm.entity_manager" method="getRepository" />
            <argument type="string">%wtw_user.entity.user.class%</argument>
            <property type="service" id="repository.aggregate" name="aggregateRepository" />
            <property type="service" id="logger" name="logger" />
        </service>
    </services>
</container>

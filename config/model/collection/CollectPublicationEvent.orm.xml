<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Collection\Entity\CollectPublicationEvent"
            repository-class="App\Infrastructure\Collection\Repository\CollectPublicationEventRepository"
            table="timely_status">

        <indexes>
            <index name="type_idx" columns="type,occurred_at"/>
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field
            name="type"
            column="publication_date_time"
            type="string"
            length="100"
        />

        <field
            name="payload"
            column="payload"
            type="text"
            length="100"
        />

        <field
            name="occurredAt"
            column="occurred_at"
            type="datetime"
        />

    </entity>

</doctrine-mapping>
